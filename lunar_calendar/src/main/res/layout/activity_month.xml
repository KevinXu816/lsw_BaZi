<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layoutMask"  android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfdfd"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDateSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_flatten"
            android:gravity="center"
            android:text="2015年7月25日 19:50"
            android:textColor="@color/white"
            android:textSize="20dp" android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvLunarDateSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_flatten"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="二零一五年六月十一"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/appx_banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >
    </RelativeLayout>

    <GridView
        android:id="@+id/gv_calendarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout android:id="@+id/fl_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
       android:paddingBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="年"
                android:textColor="@color/gray_medium" />
            <TextView android:id="@+id/tvEraYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="1"
                android:text="乙未"
                android:textSize="30dp" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="月"
                android:textColor="@color/gray_medium" />

            <TextView android:id="@+id/tvEraMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="1"
                android:text="癸未"
                android:textSize="30dp" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="日"
                android:textColor="@color/gray_medium" />

            <TextView android:id="@+id/tvEraDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="1"
                android:text="壬寅"
                android:textSize="30dp" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="时"
                android:textColor="@color/gray_medium" />

            <TextView android:id="@+id/tvEraHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="1"
                android:text="庚戌"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:id="@+id/tvSolarTerm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="小暑: 7日18:12"
                android:textSize="15dp" />

            <TextView android:id="@+id/tvSolarTerm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="小暑: 7日18:12"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>
</RelativeLayout>